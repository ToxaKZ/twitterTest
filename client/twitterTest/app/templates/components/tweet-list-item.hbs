<div class="list-group-item row">
            <div class="col-md-1"> <img src="{{model.userImage}}" class="img-reponsive img-rounded" /></div>
            <div class="col-md-8">
                <h4 class="list-group-item-heading">{{model.userName}}</h4>
                <p class="list-group-item-text">{{model.text}}</p>
            </div>
            <div class="col-md-3">
                
                {{#if model.starredDate}}
                <h5><span class="label label-warning"> <span class="glyphicon glyphicon-star"></span> Starred at: {{moment-format model.starredDate 'MM-DD-YYYY HH:MM:SS'}}</span></h5>
                {{else}}
                <button class="btn btn-xs btn-warning" {{action "setStarred"}}>
                    <span class="glyphicon glyphicon-star"></span>
                </button>
                {{/if}}
            </div>
  </div>